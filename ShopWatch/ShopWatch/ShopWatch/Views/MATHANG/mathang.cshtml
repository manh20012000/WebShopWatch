                                                <input type="hidden" id="selectedBrand" name="selectedBrand" />
                                                <input type="hidden" id="selectedPrice" name="selectedPrice" />
                                                <input type="hidden" id="selectedSize" name="selectedSize" />
                                                <input name="searchValue" type="text" placeholder="Tìm kiếm tên đồng hồ ..." style="height: 40px; margin-right: 40px;width:450px;border-width:1px;padding:5px;border-radius:12px">
                                                <input type="submit" style="height: 40px;width:100px;border-radius:10px;background-color:burlywood;border-width:0" value="search" />
                                            </form>
                                        </div>



                                        <!-- Product Grid -->

                                        <div class="product-grid">
                                            @foreach (var item in Model)
                                            {
