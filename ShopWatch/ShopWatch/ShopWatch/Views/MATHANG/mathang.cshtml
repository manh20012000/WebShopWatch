    <style>
        .pagination {
            display: inline-block;
            margin-left: 0; /* Điều chỉnh khoảng cách phía bên trái */
            
           
        }

            .pagination a {
                color: black; /* Màu chữ cho các link */
                float: left; /* Canh lề trái */
                padding: 8px 16px; /* Khoảng cách giữa các link */
                text-decoration: none; /* Loại bỏ gạch chân */
                transition: background-color .3s; /* Hiệu ứng chuyển đổi màu nền */
                background-color: blueviolet;
            }

                .pagination a.active {
                    background-color: #04AA6D; /* Màu nền cho trang hiện tại */
                    color: white; /* Màu chữ cho trang hiện tại */
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd; /* Màu nền khi hover */
                }

            /* CSS cho nút Previous và Next */
            .pagination .prev,
            .pagination .next {
                padding: 8px 8px; /* Khoảng cách giữa nút Previous và Next */
                background-color: #f1f1f1; /* Màu nền */
                color: black; /* Màu chữ */
                transition: background-color .3s; /* Hiệu ứng chuyển đổi màu nền */
            }

