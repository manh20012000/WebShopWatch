    <script>
        document.getElementById("typeSelect").onchange = function () {
            document.getElementById("selectedType").value = this.value;
        };

        document.getElementById("brandSelect").onchange = function () {
            document.getElementById("selectedBrand").value = this.value;
        };

        document.getElementById("priceSelect").onchange = function () {
            document.getElementById("selectedPrice").value = this.value;
        };

        document.getElementById("sizeSelect").onchange = function () {
            document.getElementById("selectedSize").value = this.value;
        };
        var typeSelect = document.getElementById('typeSelect');
        var brandSelect = document.getElementById('brandSelect');
        var priceSelect = document.getElementById('priceSelect');
        var sizeSelect = document.getElementById('sizeSelect');

        // Gắn sự kiện onchange cho các phần tử select
        typeSelect.addEventListener('change', function () {
            document.getElementById('selectedType').value = this.value;
            document.getElementById('searchForm').submit();
        });

        brandSelect.addEventListener('change', function () {
            document.getElementById('selectedBrand').value = this.value;
            document.getElementById('searchForm').submit();
        });

        priceSelect.addEventListener('change', function () {
            document.getElementById('selectedPrice').value = this.value;
            document.getElementById('searchForm').submit();
        });

        sizeSelect.addEventListener('change', function () {
            document.getElementById('selectedSize').value = this.value;
            document.getElementById('searchForm').submit();
        });
    </script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        function searchProducts() {
            var input, filter, products, product, productName, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            products = document.getElementsByClassName("product-item");

            for (i = 0; i < products.length; i++) {
                product = products[i];
                productName = product.getElementsByClassName("product_name")[0];
                txtValue = productName.textContent || productName.innerText;

                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    product.style.display = "";
                } else {
                    product.style.display = "none";
                }
            }
        }
    </script>
