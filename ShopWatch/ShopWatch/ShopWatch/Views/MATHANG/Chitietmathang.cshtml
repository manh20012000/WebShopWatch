        /* Định dạng giá, bảo hành, loại và kích thước sản phẩm */
        .product_price p {
            font-size: 16px;
            margin-bottom: 5px;
        }

            .product_price p span.light-red {
                color: #1A1A1A; /* màu chữ đỏ nhạt */
            }

        .product_details_title h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        /* Định dạng sao đánh giá */
        .star_rating {
            list-style: none;
            padding: 0;
            margin: 10px 0;
        }

            .star_rating li {
                display: inline-block;
                margin-right: 5px;
            }

                .star_rating li i {
                    color: #f39c12; /* màu sao đầy */
                }

        /* Định dạng số lượng sản phẩm và nút thêm vào giỏ hàng */
