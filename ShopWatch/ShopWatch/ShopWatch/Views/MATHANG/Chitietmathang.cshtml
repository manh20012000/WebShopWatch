            margin-top: 20px;
        }

            .quantity span {
                margin-right: 10px;
            }

        .quantity_selector {
            display: flex;
            align-items: center;
        }

            .quantity_selector span {
                cursor: pointer;
            }

        /* Định dạng nút thêm vào giỏ hàng */
