</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box ">

            <div class="box-body" id="table-scroll">
                <table id="myTable" class="table">
                    <thead id="table-wrapper">
                        <tr>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.MADH)
                            </th>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.NGAYMUA)
                            </th>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.TONGTIEN)
                            </th>


                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.TINHTRANGDH)
                            </th>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                <label>THANHTOAN</label>
                            </th>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.KHACHHANG.TENKHACHHANG)
                            </th>

                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.DIADIEM.SDT)
                            </th>
                            <th style=" padding: 15px; text-align: center; color:antiquewhite">
                                @Html.DisplayNameFor(model => model.DIADIEM.TENDIACHI)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.MADH)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.NGAYMUA)
                                </td>
                                <td class="text-center" style="font-size:16px;color:brown;font-weight:500">
                                    @String.Format("{0:N0}", item.TONGTIEN)
                                </td>


                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TINHTRANGDH)
                                </td>
                                <td class="text-center">
                                    @if (item.HINHTHUCTHANHTOAN == false)
                                    {
                                        <text>COD</text>
                                    }
                                    else
                                    {
                                        <text>ONLINE</text>
                                    }
                                </td>


                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TUYCHON)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.KHACHHANG.TENKHACHHANG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DIADIEM.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DIADIEM.TENDIACHI)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("XacNhan", new { id = item.MADH,idUser=item.KHACHHANG.EMAIL })'">Xác nhận</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function myFunction() {
        // Declare variables
        var input, filter, table, tr, i, j, column_length, count_td;
        column_length = document.getElementById('myTable').rows[0].cells.length;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            // Check if the row is the header row
            if (i === 0) {
                continue; // Skip the header row
            }
            count_td = 0;
            for (j = 0; j < column_length - 2; j++) { // except first column
                td = tr[i].getElementsByTagName("td")[j];
                /* ADD columns here that you want you to filter to be used on */
                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        count_td++;
                    }
                }
            }

            // Check if it's the header row or if any column contains the filter text
            if (count_td > 0) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }
    }
    $(function () {
        var hub = $.connection.nottification; // Đúng tên của Hub
        console.log(hub);

        hub.client.SendNotification = function (message) {
            console.log(message)
            alert("Thông báo: " +
                'Nội dung:Bạn có 1 đơn hàng mới cần được xác nhận' +
                "Mã đơn hàng:" + message.MADH
            );
        };

        $.connection.hub.start();
    });
</script>