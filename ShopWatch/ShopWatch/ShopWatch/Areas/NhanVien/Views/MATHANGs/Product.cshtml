                                        {
                                            foreach (var imagePath in item.ANHS)
                                            {
                                                <img src="@imagePath" alt="Hình ảnh sản phẩm" class="product-image" style="width:50%;height:50%;" />
                                            }
                                        }*@
                                </td>
                                <td class="text-center">
                                    @String.Format("{0:dd/MM/yyyy}", item.NGAYSANXUAT)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.LOAI)

                                </td>
                                @* <td class="text-center ">
                                        @Html.DisplayFor(modelItem => item.KICHTHUOC) MM
                                    </td>*@
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TENHANGSANXUAT)

                                </td>
                                <td class="text-center" style="font-size:16px;color:brown;font-weight:500">
                                    @String.Format("{0:N0}", item.GIAHANG)
                                </td>
                                <td class="text-center">
                                    @if (item.SALE?.PHANTRAMSALE != null)
                                    {
                                        <text>@Html.DisplayFor(modelItem => item.SALE.PHANTRAMSALE)%</text>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                        <div class="btn-group" role="group">
                                            <button id="btnGroupDrop1"
                                                    type="button" style="color:brown"
                                                    class="btn btn-outline-secondary dropdown-toggle"
                                                    data-bs-toggle="dropdown"
                                                    aria-haspopup="true"
                                                    aria-expanded="false">
                                                Tùy chọn
                                            </button>
                                            <div class="dropdown-menu" style="width:200px">
                                                <a href="@Url.Action("EditProduct", new { id = item.MAMATHANG })" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i> Edit
