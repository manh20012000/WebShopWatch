@model IPagedList<ShopWatch.Models.MetaDATA.MathangViewModel>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}
<style>
    .edit-button,
    .delete-button {
      
        display: inline-block;
        padding: 8px 16px;
        margin-right: 10px;
    
        background: linear-gradient(to right, #87CEFA, #4682B4);
        border: none;
        color: white;
        font-size: 14px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
    }
    .bnts{
        background-color:burlywood;
         margin-left:20px;
         
    }
    .seache{
        display: flex;
        padding:20px
    }
    #table-wrapper {
        position: relative;
    }

    #table-scroll {
        height: 600px;
        overflow: auto;
        margin-top: 20px;
    }

    #table-wrapper table {
        width: 100%;
    }
    #table-wrapper {
        position: sticky;
        top: 0;
        z-index: 1;
        background-color: #04AA6D;
    }


        #table-wrapper table thead th .text {
            position: absolute;
            top: -20px;
            z-index: 2;
            height: 20px;
            width: 35%;
            border: 1px solid red;
        }
</style>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Product", "MATHANGs", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="input-group-container">
                <div class="seache">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập vào giá hoặc tên sản phẩm" aria-label="Search" aria-describedby="basic-addon2">
                    <button class="btn btn-outline-secondary bnts" type="submit">Search</button>
                </div>
            </div>
        }
    </div>
</div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box ">
                
                    <div class="box-body"id="table-scroll">
                        <table id="example" class="table">
                            <thead id="table-wrapper">
                                <tr style="background-color:#04AA6D; color: white;">
                                    <th style=" padding: 15px; text-align: center;">
                                        <label>TENHANG</label>
                                    </th>
                                    <th style=" padding: 15px; text-align: center;">
                                        <label>ANHSANPHAM</label>

                                    </th>
                                    <th style=" padding: 15px; text-align: center;">
                                        <label>SANXUAT</label>

                                    </th>
                                    <th style=" padding: 15px; text-align: center;">
                                        <label> LOAI</label>
                                    </th>

                                    <th style=" padding: 15px; text-align: center;">
                                        <label>HANGSANXUAT</label>

                                    </th>
                                    <th style=" padding: 15px; text-align: center;">
                                        <label>GIAHANG</label>

                                    </th>
                                    @* <th style=" padding: 15px; text-align: center;">
                    <label>BAOHANH</label>

                </th>*@
                                    <th style=" padding: 15px; text-align: center;">
                                        <label>SALE %</label>

                                    </th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" style="font-weight:700">
                                            @Html.DisplayFor(modelItem => item.TENHANG)
                                        </td>
                                        <td class="text-center">
                                            <img src="@item.ANHSANPHAM" alt="Hình ảnh sản phẩm" class="product-image" style="width:40%;height:40%;" />
                                            @* @if (item.ANHS != null && item.ANHS.Any())
                        {
                            foreach (var imagePath in item.ANHS)
                            {
                                <img src="@imagePath" alt="Hình ảnh sản phẩm" class="product-image" style="width:50%;height:50%;" />
                            }
                        }*@
                                        </td>
                                        <td class="text-center">
                                            @String.Format("{0:dd/MM/yyyy}", item.NGAYSANXUAT)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.LOAI)

                                        </td>
                                        @* <td class="text-center ">
                        @Html.DisplayFor(modelItem => item.KICHTHUOC) MM
                    </td>*@
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.TENHANGSANXUAT)

                                        </td>
                                        <td class="text-center" style="font-size:16px;color:brown;font-weight:500">
                                            @String.Format("{0:N0}", item.GIAHANG)
                                        </td>
                                        <td class="text-center">
                                            @if (item.SALE?.PHANTRAMSALE != null)
                                            {
                                                <text>@Html.DisplayFor(modelItem => item.SALE.PHANTRAMSALE)%</text>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                                <div class="btn-group" role="group">
                                                    <button id="btnGroupDrop1"
                                                            type="button" style="color:brown"
                                                            class="btn btn-outline-secondary dropdown-toggle"
                                                            data-bs-toggle="dropdown"
                                                            aria-haspopup="true"
                                                            aria-expanded="false">
                                                        Tùy chọn
                                                    </button>
                                                    <div class="dropdown-menu" style="width:200px">
                                                        <a href="@Url.Action("EditProduct", new { id = item.MAMATHANG })" class="btn btn-primary">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>

                                                        <a href="@Url.Action("Delete", new { id = item.MAMATHANG })" class="btn btn-primary">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>

                                                        <a href="@Url.Action("Details", new { id = item.MAMATHANG })" class="btn btn-primary">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->

        <div>
            @Html.PagedListPager(Model, page => Url.Action("Product", new { page }))
        </div>
