﻿

@model ShopWatch.Models.MATHANG

@{
    ViewBag.Title = "DeleteReceipt";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}
<style>

    .center-content {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
        width: 90%;
         margin-top:90px;
        margin: auto;
        background-color:darkgray
    }

    .dl-horizontal {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        list-style: none;
        padding: 0;
    }

        .dl-horizontal dt,
        .dl-horizontal dd {
            flex-basis: calc(50% - 20px); /* Đặt kích thước cơ bản cho cột, giả sử có 2 cột trên một hàng */
            margin: 10px; /* Khoảng cách giữa các cột */
            text-align: left; /* Căn văn bản sang trái */
        }
</style>


    <h2>Delete Production</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <center class="center-content" style="margin-bottom:130px;padding-bottom:20px">
            <dl class="dl-horizontal">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TENHANG)
                </dt>
                <dd class="col-sm-9">
                    <label> @Html.DisplayFor(model => model.TENHANG)</label>
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ANHSANPHAM)
                </dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content(Model.ANHSANPHAM)" alt="Product Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NGAYSANXUAT)
                </dt>
                <dd class="col-sm-9">
                    <label>@String.Format("{0:dd/MM/yyyy}", @Html.DisplayFor(model => model.NGAYSANXUAT) ) </label>
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TENHANGSANXUAT)
                </dt>
                <dd class="col-sm-9">
                    <label> @Html.DisplayFor(model => model.TENHANGSANXUAT)</label>
                </dd>

                <dt class="col-sm-3">
                    <label> @Html.DisplayNameFor(model => model.GIAHANG)</label>
                </dt>
                <dd class="col-sm-9">
                    <label> @String.Format("{0:N0}", @Html.DisplayFor(model => model.GIAHANG)) </label>
                </dd>
                <dt class="col-sm-3">
                    <label> @Html.DisplayNameFor(model => model.BAOHANH)</label>
                </dt>
                <dd class="col-sm-9">
                    <label>  @Html.DisplayFor(model => model.BAOHANH)</label>

                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color" >
                    <input type="submit" value="Delete" class="btn btn-default" style="background-color:bisque;width:120px" />
                </div>
            }
        </center>
    </div>















