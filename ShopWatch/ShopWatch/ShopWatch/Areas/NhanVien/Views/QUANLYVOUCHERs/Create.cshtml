@model ShopWatch.Models.MetaDATA.VoucherShare

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="font-weight:bold">QUANLYVOUCHER</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            @Html.LabelFor(model => model.PHANTRAMGIAMGIA, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.PHANTRAMGIAMGIA, new { htmlAttributes = new { type = "number", min = "0", max = "100", @class = "form-control", placeholder = "Nhập phần trăm giảm giá (<100%)" } })
            @Html.ValidationMessageFor(model => model.PHANTRAMGIAMGIA, " ", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DIEUKIEN, htmlAttributes: new { @class = "control-label" })
            <div style="max-height: 60px; overflow-y: auto;">
                @Html.EditorFor(model => model.DIEUKIEN, new { htmlAttributes = new { @class = "form-control", placeholder = "nhập nội dung" } })
            </div>
            @Html.ValidationMessageFor(model => model.DIEUKIEN, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.NGAYBATDAU, htmlAttributes: new { @class = "control-label " })
            <div style="max-height: 60px; overflow-y: auto;">
                <input name="NGAYBATDAU" type="date" class="form-control" />
                @*   @Html.EditorFor(model => model.NGAYBATDAU, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.NGAYBATDAU, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NGAYKETTHUC, htmlAttributes: new { @class = "control-label " })
            <div style="max-height: 60px; overflow-y: auto;">
                <input name="NGAYKETTHUC" type="date" class="form-control" />
                @* @Html.EditorFor(model => model.NGAYKETTHUC, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.NGAYKETTHUC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(model => model.TRANGTHAIGIOIHAN, htmlAttributes: new { @class = "control-label" })
            <div style="max-height: 60px; overflow-y: auto;">
                @Html.DropDownList("Status", new List<SelectListItem>
                 {
                new SelectListItem { Text = "True", Value = "true" },
                new SelectListItem { Text = "False", Value = "false" }
                }, "Chọn trạng thái", new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.TRANGTHAIGIOIHAN, "", new { @class = "text-danger" })
        </div>
        <div class="form-group" style="margin-top:60px">
            <div class="col-md-offset-5 col-md-12">
                <input type="submit" value="Create" class="btn btn-default"style="background-color:indianred;font-weight:bold" />
            </div>
        </div>
    </div>
}

