@model IPagedList<ShopWatch.Models.QUANLYVOUCHER>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}

<h2>Danh sách quản ly voucher</h2>

<table class="table">
    <tr style="background-color:#04AA6D;">
        <th class="text-center">
            <label>GHI CHÚ</label>
        </th>
        <th class="text-center">
            <label>NOIDUNG</label>
            
        </th>
        <th class="text-center">
            <label>NGAYBATDAU</label>
      
        </th>
        <th class="text-center">
            <label>NGAYKETTHUC</label>
            
        </th>
      
        <th class="text-center">
            <label>TENKHACHHANG</label>
         
        </th>
        <th class="text-center">
            <label>DIEUKIEN</label>
            
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.GHICHU)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.NOIDUNG)
    </td>
    <td class="text-center">
        @String.Format("{0:dd/MM/yyyy}", item.NGAYBATDAU)
     
    </td>
    <td class="text-center">
        @String.Format("{0:dd/MM/yyyy}", item.NGAYKETTHUC)
    </td>
   
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.KHACHHANG.TENKHACHHANG)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.VOUCHER.DIEUKIEN)
    </td>
    <td class="text-center">
        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1"
                        type="button" style="color:brown"
                        class="btn btn-outline-secondary dropdown-toggle"
                        data-bs-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false">
                    Tùy chọn
                </button>
                <div class="dropdown-menu" aria-labelledb0pxy="btnGroupDrop1" style="width:20px">

                    @Html.ActionLink("Edit", "Edit", new { id = item.MAQUANLYVOUCHER }, new { @class = " btn btn-primary" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.MAQUANLYVOUCHER }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </td>
    @*    <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MAQUANLYVOUCHER }) |
            @Html.ActionLink("Details", "Details", new { id = item.MAQUANLYVOUCHER }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MAQUANLYVOUCHER })
        </td>*@
</tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
