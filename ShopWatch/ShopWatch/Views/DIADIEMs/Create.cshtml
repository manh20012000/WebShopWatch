            </div>
        </div>

        <div class="form-group">
            <label style="" class="control-label col-md-2">ĐỊA CHỈ GIAO HÀNG</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENDIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENDIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="" class="control-label col-md-2">sỐ ĐT NHẬN HÀNG</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

