@model IEnumerable<ShopWatch.Models.NHAPHANG>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}
<style>
    .table-container {
        max-height: 300px;
        overflow-y: auto;
    }

    .edit-button,
    .delete-button {
        display: inline-block;
        padding: 8px 16px;
        margin-right: 10px;
        background: linear-gradient(to right, #87CEFA, #4682B4);
        border: none;
        color: white;
        font-size: 14px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
    }

    /* Style cho bảng, chỉ để minh họa */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    /* Style cho các cell và header của bảng */
    td, th {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    .bnts {
        background-color: burlywood;
        margin-left: 20px;
    }

    .seache {
        display: flex;
        padding: 20px
    }
    #table-wrapper {
        position: relative;
    }

    #table-scroll {
        height: 500px;
        overflow: auto;
        margin-top: 20px;
    }

    #table-wrapper table {
        width: 100%;
    }
        #table-wrapper table thead th .text {
            position: absolute;
            top: -20px;
            z-index: 2;
            height: 20px;
            width: 35%;
            border: 1px solid red;
        }
</style>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Index", "NHAPHANGs", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="input-group-container">
            <div class="seache">
                <input type="text" name="searchValue" class="form-control" placeholder="Nhập vào tìm kiếm" aria-label="Search" aria-describedby="basic-addon2">
                <button class="btn btn-outline-secondary bnts" type="submit">Search</button>
            </div>
        </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box ">
           
            <div id="table-wrapper">
                <div id="table-scroll">
               
                        <table id="example" class="tablel table-bordered table-striped">
                       
                                <tr>
                                    <th class="text-center" >
                                        <label>MÃ PHIẾU NHẬP </label>
                                    </th>
                                    <th class="text-center">
                                        <label>THÀNH TIỀN </label>
                                    </th>
                                    <th class="text-center">
                                        <label>NGÀY NHẬP </label>

                                    </th>
                                    <th class="text-center" >
                                        <label>TÊN NHÂN VIÊN </label>
                                    </th>
                                    <th class="text-center" >
                                        </th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center tble">
                                            @Html.DisplayFor(modelItem => item.MANHAPHANG)
                                        </td>
                                        <td class="text-center tble">
                                            @String.Format("{0:N0}", item.THANHTIEN)
                                        </td>
                                        <td class="text-center tble ">
                                            @String.Format("{0:dd/MM/yyyy}", item.NGAYNHAP)

                                        </td>
                                        <td class="text-center tble ">
                                            @Html.DisplayFor(modelItem => item.NHANVIEN.TENNV)
                                        </td>
                                        <td class="text-center tble ">
                                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                                <div class="btn-group" role="group">
                                                    <button id="btnGroupDrop1"
                                                            type="button"
                                                            class="btn btn-outline-secondary dropdown-toggle"
                                                            data-bs-toggle="dropdown"
                                                            aria-haspopup="true"
                                                            aria-expanded="false" style="color:brown">
                                                        Tùy chọn
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="width:230px;align-content:center;justify-content:center;margin-left:20px">
                                                        @Html.ActionLink("Create", "Create", "CHITIETPHIEUNHAPs1", new { id = item.MANHAPHANG, @class = " btn btn-primary" }, new { @class = " btn btn-primary" })
                                                        @*    @Html.ActionLink("EditNhapHang", "EditNhapHang", new { id = item.MANHAPHANG })|*@
                                                        @*   @Html.ActionLink("Delete", "Delete", new { id = item.MANHAPHANG })*@
                                                        @Html.ActionLink("CreateMulti", "CreateMulti", "CHITIETPHIEUNHAPs1", new { id = item.MANHAPHANG }, new { @class = "btn btn-primary" })

                                                    </div>
                                                </div>
                                            </div>

                                        </td>

                                    </tr>
                                }
                            </table>

                </div>
              
            </div>
        </div>
    </div>
        </div>



