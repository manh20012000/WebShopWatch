            <div class="seache">
                <input type="text" name="searchValue" class="form-control" placeholder="Nhập vào giá tiền" aria-label="Search" aria-describedby="basic-addon2">
                <button class="btn btn-outline-secondary bnts" type="submit">Search</button>
            </div>
        </div>
        }
    </div>
</div>
<div class="table-container">
    <div id="table-wrapper">
        <div id="table-scroll">
            <table class="tablet">
                <tr>
                    <th style=" padding: 15px; text-align: center;">
                        @Html.DisplayNameFor(model => model.NHAPHANG.MANHAPHANG)
                    </th>
                    <th style=" padding: 15px; text-align: center;">
                        @Html.DisplayNameFor(model => model.MATHANG.MAMATHANG)
                    </th>
                    <th style=" padding: 15px; text-align: center;">
                        @Html.DisplayNameFor(model => model.NHAPHANG.MANV)
