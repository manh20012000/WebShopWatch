            height: 20px;
            width: 35%;
            border: 1px solid red;
        }
</style>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Index", "CHITIETPHIEUNHAPs1", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
