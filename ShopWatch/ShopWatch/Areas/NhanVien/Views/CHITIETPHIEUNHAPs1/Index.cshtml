                    <th></th>
                </tr>
               
                    @foreach (var item in Model)
                    {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NHAPHANG.MANHAPHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MATHANG.MAMATHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NHAPHANG.MANV)
                </td>
                <td>
